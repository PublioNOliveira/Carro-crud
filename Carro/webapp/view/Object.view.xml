<mvc:View
	controllerName="ns.Carro.controller.Object"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic"
	xmlns:footerbar="sap.ushell.ui.footerbar">

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false"
		busy="{objectView>/busy}"
		busyIndicatorDelay="{objectView>/delay}">

		<semantic:titleHeading>
			<Title
				text="Detalhe"
				level="H2"/>
		</semantic:titleHeading>

		<semantic:headerContent>
			<ObjectNumber
				number="{
					path: 'ano',
					formatter: '.formatter.numberUnit'
				}"
				unit="{modelo}"
			/>
		</semantic:headerContent>

        <semantic:content>
            <Panel>
                <VBox>
                    <Text text="Id"/>
                    <Input id="inputId" width="200px" editable="false"/>

                    <Text text="Modelo"/>
                    <Input id="inputModelo" width="200px" editable="false"/>

                    <Text text="Ano"/>
                    <Input id="inputAno" width="200px" editable="false"/>
                    <Button text="Criar" id="btnCriar" press="onObjectCriar"/>
                    <Button text="Salvar" id="btnSalvar" press="onObjectSalvar"/>
                    <Button text="Editar" id="btnEditar" press="onObjectEditar"/>
                    <Button text="Excluir" id="btnExcluir" press="onObjectExcluir"/>
                </VBox>
            </Panel>
        </semantic:content> 

		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press=".onShareEmailPress"/>
		</semantic:sendEmailAction>

		<semantic:shareInJamAction>
			<semantic:ShareInJamAction id="shareInJam" visible="{FLP>/isShareInJamActive}" press=".onShareInJamPress"/>
		</semantic:shareInJamAction>

		<semantic:saveAsTileAction>
			<footerbar:AddBookmarkButton id ="shareTile" title="{objectView>/saveAsTileTitle}"/>
		</semantic:saveAsTileAction>

	</semantic:SemanticPage>

</mvc:View>